@using System.Data.Entity.Core.Objects
@model BusConductor.UI.ViewModels.Enquiry.MakeViewModel
@section CSS
{
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
}
@section JavaScript
{
    <script src="@Url.Content("~/Scripts/Booking/Make.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Calendar/DisplayMonth.js")" type="text/javascript"></script>
}
@{
    ViewBag.Title = "Cool Cat Campers - Booking Enquiry";
}
<h1>Enquire to Book a Camper</h1>
<div class="enquiry-make">
    <div class="intro">
        <p>
            Please use the form below to enquire about making a booking. Victoria or Paul will
            contact you to discuss and confirm the booking. Please refer to the prices under 'Tariff'.
            If you intend to have more than one driver, if any driver is not between the ages of 25 
            and 75 or if you intend to drive outside the UK, this will be likely to increase costs due 
            to insurance requirements.
            This form does not commit you to a booking. 
        </p>
        <p>
            Fields marked with <span class="required">*</span> are required fields.
        </p>
    </div>

        @Html.Partial("_Calendar", Model.Calendar)
        @using (Html.BeginForm())
        {
            <fieldset>
                @Html.ValidationSummary(true, "There were some problems with the information you entered, please correct and resubmit.")
                @Html.HiddenFor(model => model.BusId)
                <div class="editor-label">
                    @Html.LabelFor(model => model.BusName):
                </div>
                <div class="editor-field">
                    @Model.BusName
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.PickUp):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.PickUp)
                    @Html.ValidationMessageFor(model => model.PickUp)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.DropOff):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.DropOff)
                    @Html.ValidationMessageFor(model => model.DropOff)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Forename):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Forename)
                    @Html.ValidationMessageFor(model => model.Forename)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Surname):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Surname)
                    @Html.ValidationMessageFor(model => model.Surname)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AddressLine1):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.AddressLine1)
                    @Html.ValidationMessageFor(model => model.AddressLine1)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AddressLine2):
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.AddressLine2)
                    @Html.ValidationMessageFor(model => model.AddressLine2)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.AddressLine3):
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.AddressLine3)
                    @Html.ValidationMessageFor(model => model.AddressLine3)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Email):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ConfirmEmail):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ConfirmEmail)
                    @Html.ValidationMessageFor(model => model.ConfirmEmail)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Town):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Town)
                    @Html.ValidationMessageFor(model => model.Town)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.County):
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.County)
                    @Html.ValidationMessageFor(model => model.County)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.PostCode):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.PostCode)
                    @Html.ValidationMessageFor(model => model.PostCode)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.TelephoneNumber):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.TelephoneNumber)
                    @Html.ValidationMessageFor(model => model.TelephoneNumber)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsMainDriver):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.IsMainDriver)
                    @Html.ValidationMessageFor(model => model.IsMainDriver)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.DrivingLicenceNumber):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.DrivingLicenceNumber)
                    @Html.ValidationMessageFor(model => model.DrivingLicenceNumber)
                </div>
                <div class="alternate-driver @Model.AlternateDriverAdditionalClasses">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DriverForename):
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.DriverForename)
                        @Html.ValidationMessageFor(model => model.DriverForename)
                    </div>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DriverSurname):
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.DriverSurname)
                        @Html.ValidationMessageFor(model => model.DriverSurname)
                    </div>
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.NumberOfAdults):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.NumberOfAdults, Model.NumberOfAdultsOptions)
                    @Html.ValidationMessageFor(model => model.NumberOfAdults)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.NumberOfChildren):<span class="required">*</span>
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.NumberOfChildren, Model.NumberOfChildrenOptions)
                    @Html.ValidationMessageFor(model => model.NumberOfChildren)
                </div>
                <p>
                    <input type="submit" value="Submit Enquiry" />
                </p>
            </fieldset>
        }
</div>
